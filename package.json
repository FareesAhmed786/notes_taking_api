{
    "name": "notes-taking-api",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "start": "node ./bin/www",
        "dev": "nodemon ./bin/www",
        "test:dev": "jest --runInBand",
        "migrate:dev": "npx sequelize-cli db:migrate:undo:all && npx sequelize-cli db:migrate",
        "destroy:dev": "npx sequelize-cli db:drop",
        "createdb:dev": "npx sequelize-cli db:create",
        "cleandb:dev": "npm run destroy:dev && npm run createdb:dev && npm run migrate:dev",
        "test": "NODE_ENV=test jest --runInBand",
        "migrate": "NODE_ENV=development npx sequelize-cli db:migrate:undo:all && NODE_ENV=development npx sequelize-cli db:migrate",
        "destroy": "NODE_ENV=development npx sequelize-cli db:drop",
        "createdb": "NODE_ENV=development npx sequelize-cli db:create",
        "cleandb": "npm run destroy && npm run createdb && npm run migrate"
    },
    "dependencies": {
        "bcrypt": "^5.1.1",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "debug": "^4.3.4",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "jsonwebtoken": "^9.0.1",
        "morgan": "^1.10.0",
        "pg": "^8.11.3",
        "pg-hstore": "^2.3.4",
        "process": "^0.11.10",
        "sequelize": "^6.32.1",
        "util": "^0.12.5"
    },
    "devDependencies": {
        "@jest/globals": "^29.6.4",
        "@jest/test-sequencer": "^29.6.4",
        "allure-commandline": "^2.23.1",
        "axios": "^1.5.0",
        "jasmine-allure-reporter": "^1.0.2",
        "jest": "^29.6.4",
        "jest-allure": "^0.1.3",
        "jest-jasmine2": "^29.6.4",
        "nodemon": "^3.0.1",
        "sequelize-cli": "^6.6.1"
    },
    "jest": {
        "verbose": true,
        "silent": true,
        "testTimeout": 10000,
        "detectOpenHandles": true,
        "testEnvironment": "node",
        "coveragePathIgnorePatterns": [
            "/node_modules/"
        ],
        "reporters": [
            "default",
            "jest-allure"
        ],
        "testRunner": "jest-jasmine2",
        "setupFilesAfterEnv": [
            "jest-allure/dist/setup"
        ],
        "testSequencer": "./testSequencer.js",
        "maxWorkers": 1
    }
}
